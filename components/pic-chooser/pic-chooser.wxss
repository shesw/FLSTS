/* components/pic-chooser/pic-chooser.wxss */

.btn-open-file {
    width: 90vw;
    height: 100rpx;
    margin-top: 20rpx;
}

.images {
    width: 90vw;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.img {
    width: 200rpx;
    height: 200rpx;
    border: 1px solid #ccc;
    margin: 10rpx;
}

.icon-del {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    background-color: #eee;
    opacity: 0.8;
    top:10rpx;
    right:10rpx;
}