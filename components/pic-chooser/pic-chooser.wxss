/* components/pic-chooser/pic-chooser.wxss */

.btn-upload {
    width: 90vw;
    height: 100rpx;
    margin-top: 40rpx;
}

.images {
    width: 90vw;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.img {
    width: 200rpx;
    height: 200rpx;
    border: 1px solid #ccc;
    margin: 10rpx;
}

.icon-del {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    background-color: #eee;
    opacity: 0.8;
    top:10rpx;
    right:10rpx;
}

.key{
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center
}

.key-text{
    line-height: 40rpx;
    margin-right: 10rpx;
}

.input{
    width: 60vw;
    height:50rpx;
    border: 1px #bbb solid;
    padding: 10rpx;
}